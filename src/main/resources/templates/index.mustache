 {{>layout/header}}
        <h1>Springboot with web Service Ver2.0</h1>
            <div class="col-md-12">
               <div class="row">
                    <div class="col-md-6">
                        <a href="/posts/save" role="button"
                                       class="btn btn-primary">write</a>
                   {{#userName}}
                       Logged in as: <span id="user">{{userName}}</span>
                        <a href="/logout" class="btn btn-info active" role="button">Logout</a>
                   {{/userName}}
                        {{^userName}}
                            <a href="/oauth2/authorization/google" class="btn btn-success active" role="button">
                                Google Login
                            </a>

                            <a href="/oauth2/authorization/naver" class="btn btn-secondary active" role="button">
                                Naver Login
                            </a>
                        {{/userName}}
                    </div>
               </div>
                <br>
                <!-- all list -->
                <table class="table table-horizontal table-boardered">
                    <thead class="thead-strong">
                    <tr>
                        <th>Number</th>
                        <th>title</th>
                        <th>author</th>
                        <th>summary</th>
                    </tr>
                    </thead>
                    <tbody id="tbody">
                    {{#posts}}
                        <th>
                            <td>{{id}}</td>
                            <td><a href="/posts/update/{{id}}">{{title}}</a></td>
                            <td>{{author}}</td>
                            <td>{{modifiedDate}}</td>
                        </th>
                    {{/posts}}
                    </tbody>
                </table>
            </div>
    {{>layout/footer}}
    </body>
</html>