<!DOCTYPE HTML>
<html>
<head>
    <title>SpringBoot Web Service</title>
    <meta http-equiv="Content-Type" content="text/html"; charset="UTF-8" />
</head>

    <body>
    {{>layout/header}}
        <h1>String Springboot with web Service</h1>
            <div class="col-md-12">
               <div class="row">
                    <div class="col-md-6">
                        <a href="/posts/save" role="button"
                                       class="btn btn-primary">write</a>
                    </div>
               </div>
                <br>
                <!-- all list -->
                <table class="table table-horizontal table-boardered">
                    <thead class="thead-strong">
                    <tr>
                        <th>Number</th>
                        <th>title</th>
                        <th>author</th>
                        <th>summary</th>
                    </tr>
                    </thead>
                    <tbody id="tbody">
                    {{#posts}}
                        <th>
                            <td>{{id}}</td>
                            <td><a href="/posts/update/{{id}}">{{title}}</a></td>
                            <td>{{author}}</td>
                            <td>{{modifiedDate}}</td>
                        </th>
                    {{/posts}}
                    </tbody>
                </table>
            </div>
    {{>layout/footer}}
    </body>
</html>