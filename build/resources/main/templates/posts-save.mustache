{{>layout/header}}

<h1>board_write</h1>

<div class="col-md-12">
    <div class="col-md-4">
        <form>
            <div class="form-group">
                <label for="title">Title</label>
                <input type="text" class="form-control" id="title" placeholder="put your title in"/>
            </div>
            <div class="form-group">
                <label for="author">Author</label>
                <input type="text" class="form-control" id="author" placeholder="put author in" />
            </div>
            <div class="form-group">
                <label for="content">summary</label>
                <textarea class="form-control" id="content" placeholder="put what you wanna write"></textarea>
            </div>
        </form>
        <a href="/" role="button" class="btn btn-secondary">cancel</a>
        <button type="button" class="btn btn-primary" id="btn-save">register</button>
    </div>
</div>

{{>layout/footer}}